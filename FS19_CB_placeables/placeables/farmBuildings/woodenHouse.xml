  </maskAreas>
 </seasons>

 <animatedObjects>
  <animatedObject saveId="lights" >
   <controls triggerNode="1|0" posAction="ACTIVATE_HANDTOOL" posText="action_lightsOnOff" negText="action_lightsOnOff" />
